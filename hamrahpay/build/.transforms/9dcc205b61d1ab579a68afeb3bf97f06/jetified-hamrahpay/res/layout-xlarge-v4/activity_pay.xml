<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/hamrahpay_addressbar_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/hamrahpay_background"
        android:orientation="horizontal"
        android:paddingBottom="1dp">

        <TextView
            android:id="@+id/txtv_acPay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/hamrahpay_background"
            android:drawableLeft="@drawable/ic_https"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingStart="0dp"
            android:paddingLeft="0dp"
            android:paddingTop="2dp"
            android:paddingEnd="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="2dp"
            android:text="http://" />
    </LinearLayout>

    <WebView
        android:id="@+id/wbvw_acPay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/hamrahpay_addressbar_linear" />

</RelativeLayout>

