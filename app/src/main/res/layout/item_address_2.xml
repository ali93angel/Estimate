<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_margin="@dimen/activity_mid_margin"
    android:background="@drawable/border_blue_2"
    android:gravity="center_vertical"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:padding="@dimen/activity_mid_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/activity_mid_margin"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/blue2"
            android:textSize="@dimen/textSizeMedium"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/blue2" />

        <TextView
            android:id="@+id/textViewExaminationDay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/activity_mid_margin"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/blue2"
            android:textSize="@dimen/textSizeMedium"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/blue2" />

        <TextView
            android:id="@+id/textViewServiceGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/activity_mid_margin"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/blue2"
            android:textSize="@dimen/textSizeMedium"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/blue2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:id="@+id/textViewPeymayesh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/activity_mid_margin"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/blue2"
            android:textSize="@dimen/textSizeMedium"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/blue2" />

        <TextView
            android:id="@+id/textViewAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/activity_mid_margin"
            android:layout_weight="3"
            android:gravity="center"
            android:textColor="@color/blue2"
            android:textSize="@dimen/textSizeMedium"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/blue2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/textViewNotificationMobile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/activity_mid_margin"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/blue2"
            android:textSize="@dimen/textSizeMedium"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/blue2" />

        <TextView
            android:id="@+id/textViewMoshtarakMobile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/activity_mid_margin"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/blue2"
            android:textSize="@dimen/textSizeMedium"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/blue2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/textViewRadif"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/activity_mid_margin"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/blue2"
            android:textSize="@dimen/textSizeMedium"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/blue2" />

        <TextView
            android:id="@+id/textViewTrackNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/activity_mid_margin"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/blue2"
            android:textSize="@dimen/textSizeMedium"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/blue2" />

        <TextView
            android:id="@+id/textViewNeighbourBillId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/activity_mid_margin"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/blue2"
            android:textSize="@dimen/textSizeMedium"
            android:textStyle="bold" />
    </LinearLayout>
    <!--    <LinearLayout-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:orientation="vertical"-->
    <!--        tools:ignore="UselessParent">-->
    <!--    </LinearLayout>-->
</LinearLayout>