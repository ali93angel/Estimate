<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    tools:context="com.leon.estimate.fragments.PersonalFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_mid_margin"
        android:layout_marginRight="@dimen/activity_mid_margin"
        android:gravity="top|center_horizontal"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_large_margin"
            android:gravity="center"
            android:text="@string/moshakhasat_malek"
            android:textColor="@color/blue4"
            android:textSize="@dimen/textSizeHuge"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_mid_margin"
            android:background="@drawable/border_gray_1"
            android:padding="@dimen/activity_mid_padding"
            android:paddingTop="@dimen/activity_mid_padding"
            android:paddingBottom="@dimen/activity_mid_padding"
            tools:ignore="NestedWeights,UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    tools:ignore="DisableBaselineAlignment">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_margin="@dimen/activity_medium_margin"
                            android:gravity="left"
                            android:text="@string/nation_code"
                            android:textColor="@color/blue4"
                            android:textSize="@dimen/textSizeMedium"
                            android:textStyle="bold"
                            tools:ignore="RtlHardcoded" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_margin="@dimen/activity_mid_margin"
                            android:gravity="left"
                            android:text="@string/name"
                            android:textColor="@color/blue4"
                            android:textSize="@dimen/textSizeMedium"
                            android:textStyle="bold"
                            tools:ignore="RtlHardcoded" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_margin="@dimen/activity_medium_margin"
                            android:gravity="left"
                            android:text="@string/father_name"
                            android:textColor="@color/blue4"
                            android:textSize="@dimen/textSizeMedium"
                            android:textStyle="bold"
                            tools:ignore="RtlHardcoded" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_margin="@dimen/activity_medium_margin"
                            android:gravity="left"
                            android:text="@string/shomare_eshterak"
                            android:textColor="@color/blue4"
                            android:textSize="@dimen/textSizeMedium"
                            android:textStyle="bold"
                            tools:ignore="RtlHardcoded" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_margin="@dimen/activity_medium_margin"
                            android:gravity="left"
                            android:text="@string/phone_number"
                            android:textColor="@color/blue4"
                            android:textSize="@dimen/textSizeMedium"
                            android:textStyle="bold"
                            tools:ignore="RtlHardcoded" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/editTextNationNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/activity_mid_margin"
                            android:background="@drawable/border_gray_1"
                            android:gravity="center"
                            android:inputType="number"
                            android:lines="1"
                            android:maxLength="10"
                            android:maxLines="1"
                            android:singleLine="true"
                            tools:ignore="Autofill,LabelFor" />

                        <EditText
                            android:id="@+id/editTextName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/activity_mid_margin"
                            android:background="@drawable/border_gray_1"
                            android:gravity="center"
                            android:inputType="text"
                            android:lines="1"
                            android:maxLines="1"
                            android:singleLine="true"
                            tools:ignore="Autofill,LabelFor" />

                        <EditText
                            android:id="@+id/editTextFatherName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/activity_mid_margin"
                            android:background="@drawable/border_gray_1"
                            android:gravity="center"
                            android:inputType="text"
                            android:lines="1"
                            android:maxLines="1"
                            android:singleLine="true"
                            tools:ignore="Autofill,LabelFor" />

                        <EditText
                            android:id="@+id/editTextEshterak"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/activity_medium_margin"
                            android:background="@drawable/border_gray_1"
                            android:gravity="center"
                            android:inputType="number"
                            android:lines="1"
                            android:maxLines="1"
                            android:singleLine="true"
                            tools:ignore="Autofill,LabelFor" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/editTextPhone"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/activity_mid_margin"
                                android:layout_weight="1"
                                android:background="@drawable/border_gray_1"
                                android:gravity="center"
                                android:inputType="phone"
                                android:lines="1"
                                android:maxLength="8"
                                android:maxLines="1"
                                android:singleLine="true"
                                tools:ignore="Autofill,LabelFor" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/activity_mid_margin"
                                android:layout_marginEnd="@dimen/activity_mid_margin"
                                android:gravity="center"
                                android:text="@string/_031"
                                android:textSize="@dimen/textSizeMedium" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_margin="@dimen/activity_medium_margin"
                            android:gravity="left"
                            android:text="@string/shenasname"
                            android:textColor="@color/blue4"
                            android:textSize="@dimen/textSizeMedium"
                            android:textStyle="bold"
                            tools:ignore="RtlHardcoded" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_margin="@dimen/activity_medium_margin"
                            android:gravity="left"
                            android:text="@string/family"
                            android:textColor="@color/blue4"
                            android:textSize="@dimen/textSizeMedium"
                            android:textStyle="bold"
                            tools:ignore="RtlHardcoded" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_margin="@dimen/activity_medium_margin"
                            android:gravity="left"
                            android:text="@string/postal_code"
                            android:textColor="@color/blue4"
                            android:textSize="@dimen/textSizeMedium"
                            android:textStyle="bold"
                            tools:ignore="RtlHardcoded" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_margin="@dimen/activity_medium_margin"
                            android:gravity="left"
                            android:text="@string/radif"
                            android:textColor="@color/blue4"
                            android:textSize="@dimen/textSizeMedium"
                            android:textStyle="bold"
                            tools:ignore="RtlHardcoded" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_margin="@dimen/activity_medium_margin"
                            android:gravity="left"
                            android:text="@string/mobile_number"
                            android:textColor="@color/blue4"
                            android:textSize="@dimen/textSizeMedium"
                            android:textStyle="bold"
                            tools:ignore="RtlHardcoded" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/editTextShenasname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/activity_mid_margin"
                            android:background="@drawable/border_gray_1"
                            android:gravity="center"
                            android:inputType="number"
                            android:lines="1"
                            android:maxLines="1"
                            android:singleLine="true"
                            tools:ignore="Autofill,LabelFor" />

                        <EditText
                            android:id="@+id/editTextFamily"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/activity_medium_margin"
                            android:background="@drawable/border_gray_1"
                            android:gravity="center"
                            android:inputType="text"
                            android:lines="1"
                            android:maxLines="1"
                            android:singleLine="true"
                            tools:ignore="Autofill,LabelFor" />

                        <EditText
                            android:id="@+id/editTextPostalCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/activity_medium_margin"
                            android:background="@drawable/border_gray_1"
                            android:gravity="center"
                            android:inputType="number"
                            android:lines="1"
                            android:maxLength="10"
                            android:maxLines="1"
                            android:singleLine="true"
                            tools:ignore="Autofill,LabelFor" />

                        <EditText
                            android:id="@+id/editTextRadif"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/activity_mid_margin"
                            android:background="@drawable/border_gray_1"
                            android:gravity="center"
                            android:inputType="text"
                            android:lines="1"
                            android:maxLines="1"
                            android:singleLine="true"
                            tools:ignore="Autofill,LabelFor" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/editTextMobile"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/activity_mid_margin"
                                android:layout_weight="1"
                                android:background="@drawable/border_gray_1"
                                android:gravity="center"
                                android:inputType="phone"
                                android:lines="1"
                                android:maxLength="9"
                                android:maxLines="1"
                                android:singleLine="true"
                                tools:ignore="Autofill,LabelFor" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/activity_mid_margin"
                                android:layout_marginEnd="@dimen/activity_mid_margin"
                                android:gravity="center"
                                android:text="@string/_09"
                                android:textSize="@dimen/textSizeMedium" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_margin="@dimen/activity_medium_margin"
                        android:layout_weight="0.5"
                        android:gravity="left"
                        android:text="@string/address"
                        android:textColor="@color/blue4"
                        android:textSize="@dimen/textSizeMedium"
                        android:textStyle="bold"
                        tools:ignore="RtlHardcoded" />

                    <EditText
                        android:id="@+id/editTextAddress"
                        android:layout_width="0dp"
                        android:layout_height="122dp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/activity_medium_margin"
                        android:layout_weight="2"
                        android:background="@drawable/border_gray_1"
                        android:gravity="right|top"
                        android:inputType="textMultiLine"
                        android:lines="2"
                        android:singleLine="true"
                        tools:ignore="Autofill,LabelFor,RtlHardcoded" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_margin="@dimen/activity_medium_margin"
                        android:layout_weight="0.5"
                        android:gravity="left"
                        android:text="@string/description"
                        android:textColor="@color/blue4"
                        android:textSize="@dimen/textSizeMedium"
                        android:textStyle="bold"
                        tools:ignore="RtlHardcoded" />

                    <EditText
                        android:id="@+id/editTextDescription"
                        android:layout_width="0dp"
                        android:layout_height="77dp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/activity_medium_margin"
                        android:layout_weight="2"
                        android:background="@drawable/border_gray_1"
                        android:gravity="right|top"
                        android:inputType="textMultiLine"
                        android:lines="4"
                        android:singleLine="true"
                        tools:ignore="Autofill,LabelFor,RtlHardcoded" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>
